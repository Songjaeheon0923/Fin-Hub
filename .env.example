# Fin-Hub Environment Variables Example
# Copy this file to .env and fill in your actual API keys

# Alpha Vantage API (Real-time stock data)
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=demo

# FRED API (Federal Reserve Economic Data)
# Get your API key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=demo

# News API (Financial news data)
# Get your API key from: https://newsapi.org/register
NEWS_API_KEY=demo

# CoinGecko API (Cryptocurrency data)
# Professional API key (optional, free tier available without key)
COINGECKO_API_KEY=demo

# Database Configuration
DATABASE_URL=postgresql://fin_hub:fin_hub_pass@postgres:5432/fin_hub_registry
REDIS_URL=redis://redis:6379/0

# Service Discovery
CONSUL_HOST=consul
CONSUL_PORT=8500

# Hub Configuration
HUB_HOST=hub-server
HUB_PORT=8000

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
CACHE_TTL_SECONDS=300

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true