{
  "datacenter": "dc1",
  "data_dir": "/consul/data",
  "log_level": "INFO",
  "node_name": "fin-hub-consul",
  "bind_addr": "0.0.0.0",
  "client_addr": "0.0.0.0",
  "retry_join": ["consul"],
  "ui_config": {
    "enabled": true
  },
  "connect": {
    "enabled": true
  },
  "server": true,
  "bootstrap_expect": 1,
  "acl": {
    "enabled": false,
    "default_policy": "allow"
  },
  "services": [
    {
      "name": "fin-hub-registry",
      "tags": ["registry", "core"],
      "port": 8000,
      "check": {
        "name": "Hub Server Health Check",
        "http": "http://hub-server:8000/health",
        "interval": "30s",
        "timeout": "10s"
      }
    }
  ],
  "checks": [
    {
      "name": "Consul Health",
      "args": ["consul", "kv", "get", "service/health"],
      "interval": "30s",
      "timeout": "10s"
    }
  ]
}