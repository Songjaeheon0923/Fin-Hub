{
  "mcpServers": {
    "fin-hub": {
      "command": "python",
      "args": [
        "-m", "services.hub-server.app.mcp_server"
      ],
      "cwd": "C:/project/Fin-Hub",
      "env": {
        "ENVIRONMENT": "development",
        "DATABASE_URL": "postgresql://fin_hub:fin_hub_pass@localhost:5432/fin_hub_registry",
        "REDIS_URL": "redis://localhost:6379/0",
        "CONSUL_HOST": "localhost",
        "CONSUL_PORT": "8500",
        "LOG_LEVEL": "INFO"
      }
    },
    "fin-hub-market": {
      "command": "python",
      "args": [
        "-m", "services.market-spoke.app.main",
        "mcp"
      ],
      "cwd": "C:/project/Fin-Hub",
      "env": {
        "ENVIRONMENT": "development",
        "HUB_HOST": "localhost",
        "HUB_PORT": "8000",
        "SERVICE_NAME": "market-spoke",
        "SERVICE_PORT": "8001",
        "ALPHA_VANTAGE_API_KEY": "demo",
        "NEWS_API_KEY": "demo",
        "POLYGON_API_KEY": "your_polygon_api_key_here",
        "TWELVE_DATA_API_KEY": "your_twelve_data_api_key_here",
        "FINNHUB_API_KEY": "your_finnhub_api_key_here",
        "FRED_API_KEY": "your_fred_api_key_here",
        "LOG_LEVEL": "INFO"
      }
    },
    "fin-hub-risk": {
      "command": "python",
      "args": [
        "-m", "services.risk-spoke.app.main",
        "mcp"
      ],
      "cwd": "C:/project/Fin-Hub",
      "env": {
        "ENVIRONMENT": "development",
        "HUB_URL": "http://localhost:8000",
        "SERVICE_NAME": "risk-spoke",
        "SERVICE_PORT": "8002",
        "LOG_LEVEL": "INFO"
      }
    },
    "fin-hub-portfolio": {
      "command": "python",
      "args": [
        "-m", "services.pfolio-spoke.app.main",
        "mcp"
      ],
      "cwd": "C:/project/Fin-Hub",
      "env": {
        "ENVIRONMENT": "development",
        "HUB_URL": "http://localhost:8000",
        "SERVICE_NAME": "pfolio-spoke",
        "SERVICE_PORT": "8003",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}