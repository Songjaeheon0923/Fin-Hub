# Fin-Hub Environment Configuration Template
# Copy this file to .env and modify the values as needed

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://fin_hub:fin_hub_pass@localhost:5432/fin_hub_registry
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fin_hub_registry
DB_USER=fin_hub
DB_PASSWORD=fin_hub_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Consul Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_TOKEN=

# Service Configuration
HUB_SERVER_HOST=0.0.0.0
HUB_SERVER_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
POLYGON_API_KEY=your-polygon-key
NEWS_API_KEY=your-news-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# MCP Configuration
MCP_SERVER_NAME=fin-hub
MCP_SERVER_VERSION=1.0.0
MCP_PROTOCOL_VERSION=2024-11-05

# Development Tools
ENABLE_API_DOCS=true
ENABLE_DEBUG_TOOLBAR=false